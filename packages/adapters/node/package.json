{
  "name": "@marko/run-adapter-node",
  "version": "0.1.13",
  "description": "Preview and deploy @marko/run apps on Connect-style servers",
  "license": "MIT",
  "homepage": "https://github.com/marko-js/run/tree/main/packages/adapters/node",
  "logo": {
    "url": "https://github.com/marko-js/run/raw/main/assets/marko-run.png"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/run.git"
  },
  "author": "Ryan Turnquist <rturnq@gmail.com>",
  "keywords": [
    "marko"
  ],
  "type": "module",
  "scripts": {
    "test": "",
    "build": "tsc -b && tsx scripts/build.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "import": "./dist/middleware.js",
      "require": "./dist/middleware.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ],
      "middleware": [
        "./dist/middleware.d.ts"
      ]
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./src/index.ts",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@marko/run": "^0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.9.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0",
    "mocha": "^10.8.2",
    "mocha-snap": "^5.0.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.0"
  }
}
