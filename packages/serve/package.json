{
  "name": "@marko/run",
  "version": "0.0.1",
  "description": "File-based routing for Marko based on Vite",
  "keywords": [],
  "author": "Ryan Turnquist <rturnq@gmail.com>",
  "license": "MIT",
  "type": "module",
  "bin": {
    "marko-run": "./dist/cli/index.mjs"
  },
  "scripts": {
    "mocha": "cross-env NODE_ENV=test mocha \"./src/**/__tests__/*.test.ts\"",
    "test": "npm run mocha",
    "test:watch": "npm run mocha -- --watch",
    "test:inspect": "npm test -- --inspect",
    "test:update": "npm run mocha -- --update",
    "build": "tsc -b && tsx scripts/build.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js",
      "require": "./dist/runtime/index.cjs"
    },
    "./router": {
      "types": "./dist/runtime/router.d.ts",
      "import": "./dist/runtime/router.js",
      "require": "./dist/runtime/router.cjs"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js",
      "require": "./dist/vite/index.cjs"
    },
    "./adapter": {
      "types": "./dist/adapter/index.d.ts",
      "import": "./dist/adapter/index.js",
      "require": "./dist/adapter/index.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./src/runtime/index.ts"
      ],
      "router": [
        "./src/runtime/router.ts"
      ],
      "vite": [
        "./src/vite/index.ts"
      ],
      "adapter": [
        "./src/adapter/index.ts"
      ]
    }
  },
  "types": "./dist/runtime/index.d.ts",
  "main": "./src/runtime/index.ts",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@marko/vite": "^2.3.9"
  },
  "devDependencies": {
    "@babel/types": "^7.19.0",
    "@marko/compiler": "^5.22.6",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.6",
    "acorn": "^8.8.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.15.7",
    "marko": "^5.21.9",
    "mocha": "^10.0.0",
    "mocha-snap": "^4.3.0",
    "prettier": "^2.7.1",
    "tsx": "^3.9.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@hattip/adapter-node": "^0.0.24",
    "@hattip/core": "^0.0.24",
    "@marko/vite": "^2.3.11",
    "cli-table3": "^0.6.3",
    "gzip-size": "^7.0.0",
    "kleur": "^4.1.5",
    "pretty-bytes": "^6.0.0",
    "sade": "^1.8.1",
    "serve-static": "^1.15.0",
    "vite": "^3.0.8"
  }
}
